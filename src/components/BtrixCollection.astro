---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { bytes, number, betweenDates } from "../helpers/format";

import BrowsertrixLogo from "@webrecorder/hickory/icons/brand/browsertrix-icon-solid.svg";

type Props = {
  endpoint?: string;
  org: string;
  collection: string;
  url?: string | undefined;
  index?: number;
};

// partial btrix collection
type Collection = {
  name: string;
  slug: string;
  caption: string;
  thumbnail: {
    name: string;
    path: string;
    hash: string;
    size: 0;
    mime: string;
  };
  pageCount: number;
  totalSize: number;
  dateEarliest?: string;
  dateLatest?: string;
};

const {
  endpoint = "https://app.browsertrix.com/",
  org,
  collection,
  url,
  index = 0,
} = Astro.props;

// fetch collection
const res = await fetch(
  `${endpoint}api/public/orgs/${org}/collections/${collection}`,
);
const coll = (await res.json()) as Collection;

const href = url ?? `${endpoint}explore/${org}/collections/${collection}`;
const btrixHref = `${endpoint}explore/${org}/collections/${collection}`;
const src = {
  src: coll.thumbnail.path,
  width: 640,
  height: 360,
  format: "jpeg",
};

const { name, caption, pageCount, totalSize, dateEarliest, dateLatest } = coll;

const delay = `${index * 100}ms`;
---

<div class="blur-in flex flex-col">
  <a
    href={href}
    target="_blank"
    class="card card-link group flex flex-1 flex-col p-2 pb-4"
  >
    <div
      class="relative mb-4 rounded-lg bg-slate-50 shadow-lg ring-1 shadow-cyan-700/10 ring-stone-900/20 group-hover:shadow-cyan-800/20 group-hover:ring-stone-800/20 motion-safe:transition contrast-more:shadow-none contrast-more:ring-black contrast-more:group-hover:ring-black dark:ring-white/50 dark:group-hover:ring-white contrast-more:dark:ring-white dark:contrast-more:group-hover:ring-white"
    >
      <Image
        class="aspect-video w-full rounded-lg object-cover"
        src={`${endpoint}api/public/orgs/${org}/collections/${collection}/thumbnail`}
        alt=""
        width={src.width}
        height={src.height}
        loading="eager"
      />
    </div>
    <h2
      class="mx-2 text-base leading-tight font-semibold text-stone-700 transition group-hover:text-stone-900 contrast-more:text-black dark:text-stone-100 dark:group-hover:text-white"
    >
      {name}
    </h2>
    <p
      class="mx-2 mt-1.5 flex flex-wrap gap-x-1.5 gap-y-0.5 text-xs text-balance text-stone-600 transition group-hover:text-stone-800 contrast-more:text-stone-900 dark:text-stone-200 dark:group-hover:text-stone-100"
    >
      {betweenDates(new Date(dateEarliest!), new Date(dateLatest!))}
      <span
        class="font-mono font-thin text-stone-300 dark:text-stone-600"
        role="separator">/</span
      >
      {number(pageCount)} pages <span
        class="font-mono font-thin text-stone-300 dark:text-stone-600"
        role="separator">/</span
      >
      {bytes(totalSize)}
    </p>

    <p
      class="mx-2 mt-1.5 text-sm leading-relaxed text-pretty text-stone-400 transition group-hover:text-stone-600 contrast-more:text-stone-800 dark:group-hover:text-stone-200 contrast-more:dark:text-stone-50"
    >
      <slot>
        {caption}
      </slot>
    </p>
    <p class="mx-2 mt-auto flex items-center justify-between pt-3 text-xs">
      <span
        >Visit <b
          class="text-stone-700 contrast-more:text-inherit dark:text-stone-100"
          >{name}</b
        ></span
      >
      <Icon name="bi:globe2" class="ms-1 size-4 overflow-visible align-[0]" />
    </p>
  </a>
  <a
    href={btrixHref}
    target="_blank"
    class="card-sm card-link mt-4 flex items-center justify-between text-xs text-balance"
    ><span
      >View <b
        class="text-stone-700 contrast-more:text-inherit dark:text-stone-100"
        >{name}</b
      > on Browsertrix</span
    >
    <BrowsertrixLogo
      width={null}
      height={null}
      class="ms-1 size-4 overflow-visible align-[0]"
    /></a
  >
</div>

<style define:vars={{ delay }}></style>
